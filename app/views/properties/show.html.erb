
<div class="container">
  <h1><%= "#{@property.name}"%></h1>
  <div class="owner-controls">
    <% if session["warden.user.user.key"][0][0] == @property.user_id %>
      <%= link_to "Edit", edit_property_path(@property), class: "btn btn-success" %>
      <%= link_to "Delete", property_path(@property), method: "delete", class: "btn btn-danger", data: { confirm: "Remove This Property?" }%>
    <% end %>
  <div>
  <div class="image-carousel" style="height: 50vh; background-color: white;">
    <h2>Pictures go here</h2>
  </div>
  <div class="d-flex flex-wrap align-content-start">
    <div class="property-details" style="background-color: white;">
      <h3><strong>Â£<%= @property.price_per_night.round(2) %></strong> / night</h3>
      <p><%= @property.summary %></p>
      <p><%= @property.address %></p>
      <ul class="property-feature-list">
        <li <%= @property.has_kitchen ? "" : 'style=color:grey;' %>><%= @property.has_kitchen ? ':) has Kitchen' : ':( has Kitchen' %></li>
        <li <%= @property.has_internet ? "" : 'style=color:grey;' %>><%= @property.has_internet ? ":) has Internet" : ":( has Internet" %></li>
        <li <%= @property.has_aircon ? "" : 'style=color:grey;' %>><%= @property.has_aircon ? ":) has Air Con" : ":( has Air Con" %></li>
        <li  <%= @property.has_heating ? "" : 'style=color:grey;' %>><%= @property.has_heating ? ":) has Heating" : ":( has Heating" %></li>
      </ul>
    </div>
    <div class="booking-form" style="height: 50vh; background-color: white;">
      <h2>Booking Form</h2>
      <%= render "bookings/booking_form", property: @property, booking: @booking %>
    </div>
  </div>
</div>

