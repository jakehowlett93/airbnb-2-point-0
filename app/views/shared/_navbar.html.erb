<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
  <%= image_tag "https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/240/apple/271/cloud-with-rain_1f327-fe0f.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav m-auto">
      <% if user_signed_in? %>

      <li class="nav-item">
        <%= link_to "Places to stay", properties_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Host a Home", new_property_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://avatars.githubusercontent.com/u/57643651?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Places", "/properties", class: "dropdown-item" %>
          <%= link_to "Trips", "/bookings", class: "dropdown-item" %>
          <%= link_to "Bookings", "/bookings", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>

      <% else %>

      <li class="nav-item">
        <%= link_to "Places to stay", properties_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Host a Home", new_property_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
      </li>

      <% end %>
    </ul>
  </div>
</div>
